{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "start server",
            "command": "hugo",
            "type": "shell",
            "args": [
                "server",
                "--buildDrafts",
                "--buildFuture",
                "--noHTTPCache",
                "--port",
                "8080",
            ],
            "presentation": {
                "reveal": "always",
            },
            "isBackground": true,
            "problemMatcher": [
                {
                    "owner": "hugo",
                    "fileLocation": "absolute",
                    "pattern": [
                        {
                            "regexp": "^(Error):.*\"(.*?):(\\d*):(\\d*)\": (.*)",
                            "severity": 1,
                            "file": 2,
                            "line": 3,
                            "column": 4,
                            "message": 5,
                        }
                    ],
                },
                {
                    "owner": "hugo",
                    "fileLocation": "absolute",
                    "pattern": {
                        "regexp": "^(Error):.*\"(.*?):(\\d*):(\\d*)\": (.*)",
                        "severity": 1,
                        "file": 2,
                        "line": 3,
                        "column": 4,
                        "message": 5,
                    },
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "^Start building .*",
                        "endsPattern": "^Built in .*",
                    }
                },{
                    "owner": "hugo",
                    "fileLocation": "absolute",
                    "pattern": {
                        "regexp": "^(ERROR).*\"(.*?):(\\d*):(\\d*)\": (.*)",
                        "severity": 1,
                        "file": 2,
                        "line": 3,
                        "column": 4,
                        "message": 5,
                    },
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "Change of config file detected.*",
                        "endsPattern": "Rebuilt in .*",
                    }
                }
            ],
            "group": "build"
        }
    ]
}
